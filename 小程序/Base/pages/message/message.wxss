page{
    background-color: "#f1f1f1";
}
.card{
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    margin:40rpx 20rpx;
    padding:20rpx 25rpx;
    display: flex;
    flex-direction: column;
}
.card-title{
    font-size:20px;
    margin-bottom: 20rpx;
}
.card-date{
    font-size:14px;
    color:#999;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.card-img{
    
    width: 100%;
    height: 300rpx;
}
.card-desc{
    font-size: 16px;
    color: #333;
    border-bottom: 1rpx solid #ddd;
  
    padding-bottom: 20rpx;
      margin:20rpx 0;
}
.card-read{
    font-size:14px;
    color:#666;
  
}

